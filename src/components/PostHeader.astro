---
import { Image } from "astro:assets";
import { slugify, formatDate } from "../js/utils";
const { title, category, author, date, img_src, img_alt, classes } = Astro.props
---
<div class:list={[classes]}>
    <header class="text-center space-y-5">
        <a class="bg-blue-700 text-white uppercase text-sm px-5 rounded" href=`/category/${slugify(category)}/`>{category}</a>
        <h1 class="font-bold text-4xl">{title}</h1>
        <p>by <a class="underline" href=`/author/${slugify(author)}/`>{author}</a>  â€¢  {formatDate(date)}</p>
    </header>
    <Image
        src={img_src}
        alt={img_alt}
        width={1200}
        height={600}
        format="avif"
        quality={80}
        class={"w-full aspect-[5/2] rounded-md"}
    />
</div>
