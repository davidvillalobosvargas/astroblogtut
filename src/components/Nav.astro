---
import { Icon } from "astro-icon/components";
import navData from "../data/navData"
---
<nav class="bg-white" aria-label="primary">
    <div class="flex justify-between items-center p-4 mx-auto max-w-screen-2xl border-b-2">
        <a aria-label="go home" href="/">
            <Icon name="logo" size={60} />
        </a>
        <ul class="flex gap-6">
            {
                navData.map(item=>(
                    <li>
                        <a data-navlink href={item.path}>{item.name}</a>
                    </li>
                ))
            }
        </ul>
    </div>
</nav>
<script>
    const navLinks = document.querySelectorAll("[data-navlink]")
    navLinks.forEach(item=>{
        if (item.getAttribute("href")===window.location.pathname){
            item.setAttribute("aria-current","page")
        }
    })
</script>
