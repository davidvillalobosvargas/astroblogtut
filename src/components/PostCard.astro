---
const { post } = Astro.props;
const { frontmatter, url } = post;
const {
    title,
    date,
    author,
    image: { src: img_src, alt: img_alt },
    description,
    category,
} = frontmatter;
import { Image } from "astro:assets";
import { formatDate, slugify } from "../js/utils";
import Link from "./Link.astro";
---

<article class="py-5 space-y-5 h-full bg-white rounded-md">
    <!-- "url to list of categories probably make a new folder similar to blogs" -->
    <div class="px-5">
        <small>
            <a
                href={url}
                class="px-2 py-1 text-white uppercase bg-black rounded"
                >{category}
            </a>
        </small>
    </div>
    <div>
        <a href={url} tabindex="-1">
            <Image
                src={img_src}
                alt={img_alt}
                width={400}
                height={250}
                format="webp"
                class={"w-full"}
                quality={80}
            />
        </a>
    </div>
    <div class="px-5 space-y-3">
        <div>
            <h2 class="text-3xl font-bold">
                <a href={url}>{title}</a>
            </h2>
            <small>by <a href="">{author}</a> â€¢ {formatDate(date)}</small>
        </div>
        <p>{description}</p>
        <div>
            <Link style="primary" text="Read Post" href={url} />
        </div>
    </div>
</article>
